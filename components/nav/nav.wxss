.nav-wrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    z-index: 99999;
}

.content {
    position: relative;
    width: 100%;
    height: 44px;
}

.back {
    position: absolute;
    left: 0;
    top: 0;
    width: 40px;
    height: 44px;
    z-index: 99999;
}

.back .bord {
    content: ' ';
    position: absolute;
    border-left: 2px solid #000;
    border-top: 2px solid #000;
    width: 12px;
    height: 12px;
    transform: translate(100%, 125%) rotate(-45deg);
}

.title {
    text-align: center;
    font-weight: 900;
    font-size: 32rpx;
}

.home {
    width: 70rpx;
    height: 70rpx;
    position: absolute;
    left: 70rpx;
    top: 15rpx;
}